@model List<LocationModel>

@if ( Model.Count == 0)
{
<div class="page-header">
    <h3 class="page-title"> No Location Please Add Locatoin</h3>
    <a asp-controller="Location" asp-action="Add" class="btn btn-gradient-danger btn-fw">Add New Location</a>
</div>
} else
{
<div class="page-header">
    <h3 class="page-title"> Locations </h3>
</div> 

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Location Table</h4>
        
                <a asp-controller="Location" asp-action="Add" class="btn btn-gradient-danger btn-fw">
                    Add New Location
                </a>
                <table id="order-listing" class="table">
                    <thead>
                        <tr>
                            <th>Location Name</th>
                            <th> Update </th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var info in Model)
                        {
                            <tr>
                                <td>@info.LocationName</td>
                                <td>
                                    <a asp-controller="Location" asp-action="Update" asp-route-id="@info.LocationId" class="btn btn-gradient-primary btn-fw">
                                        Update
                                    </a>
                                </td>
                                <td>
                                    <a asp-controller="Location" asp-action="Delete" asp-route-id="@info.LocationId" class="btn btn-gradient-danger btn-fw">
                                        Delete
                                    </a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
}
