@model List<FAQModel>

<div class="page-header">
    <h3 class="page-title"> FAQ </h3>
</div>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">FAQ Table</h4>

                <a asp-controller="FAQ" asp-action="Add" class="btn btn-gradient-danger btn-fw">
                    Add New Question
                </a>
                @if (Model.Count != 0)
                {

                    <table id="order-listing" class="table">
                        <thead>
                            <tr>
                                <th>Question</th>
                                <th> Answer</th>
                                <th>Update</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var info in Model)
                            {
                                <tr>
                                    <td>

                                        @{
                                            string Question = string.Empty;
                                        }
                                        @for (var i = 0; i < 20; i++)
                                        {
                                            @if (info.question.Length > i)
                                            {
                                                Question += @info.question[i];
                                            }
                                            else
                                                break;
                                        }
                                        @{
                                            Question = Question.Length < 20 ? Question : Question + "  ....";
                                        }
                                        @Question
                                    </td>
                                    <td>
                                        @{
                                            string Answer = string.Empty;
                                        }
                                        @for (var i = 0; i < 30; i++)
                                        {
                                            @if (info.Answer.Length > i)
                                            {
                                                Answer += @info.Answer[i];
                                            }
                                            else
                                                break;
                                        }
                                        @{
                                            Answer = Answer.Length < 30 ? Answer : Answer + "  ....";
                                        }
                                        @Answer
                                    </td>
                                    <td>
                                        <a asp-controller="FAQ" asp-action="Add" asp-route-id="@info.id" class="btn btn-gradient-primary btn-fw">
                                            Update
                                        </a>
                                    </td>
                                    <td>
                                        <a asp-controller="FAQ" asp-action="Delete" asp-route-id="@info.id" class="btn btn-gradient-danger btn-fw">
                                            Delete
                                        </a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-warning" style="text-align: center;" role="alert">No FAQ To Show </div>
                }
            </div>
        </div>
    </div>
</div>
