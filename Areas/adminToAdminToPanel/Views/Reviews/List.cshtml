@model List<ReviewsBageModel>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            @if (Model.Count > 0)
            {
                <h4 class="card-title">Reviews Tabel</h4>
                <table id="order-listing_wrapper" class="table table-striped">
                    <thead>
                        <tr>
                            <th> Name </th>
                            <th> Date </th>
                            <th> Likes</th>
                            <th> DisLiks</th>
                            <th>
                                controller
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.name
                                </td>
                                <td> @item.CretaedDate </td>
                                <td>
                                    @item.Like
                                </td>
                                  <td>
                                    @item.disLike
                                </td>
                                <td>
                                    <a asp-action="Delete" asp-controller="Reviews" asp-route-id="@item.id" class="btn btn-gradient-danger btn-icon-text">Delete</a>
                                </td>
                            </tr>
                        }
                </table>
            }
            else
            {
                <div style="text-align : center ; margin-top: 30px ;" class="alert alert-fill-warning" role="alert">
                    <i class="mdi mdi-alert-circle"></i> No Reviews To Show Please Add Reviews
                </div>
            }

        </div>
    </div>
</div>
