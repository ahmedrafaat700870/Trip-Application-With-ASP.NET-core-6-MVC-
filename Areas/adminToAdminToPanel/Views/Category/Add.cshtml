@model CategoryModel
<div class="page-header">
    <h3 class="page-title"> Category</h3>
</div>
<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            @if (Model.CategoryId != 0)
            {
                <h4 class="card-title">Update Category</h4>
            }
            else
            {
                <h4 class="card-title">Add Category </h4>
            }
            <form class="forms-sample" method="post" role="form" enctype="multipart/form-data" asp-controller="Category"
                asp-action="Save">
                <input type="hidden" asp-for="CategoryId" />
                <div class="form-group">
                    <label for="exampleInputUsername1">Enter Category</label>
                    <input asp-for="CategoryName" type="text" class="form-control" id="exampleInputUsername1"
                        placeholder="Username">
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                @if (Model.CategoryId != 0)
                {
                    <button type="submit" class="btn btn-gradient-primary me-2">Update </button>
                }
                else
                {
                    <button type="submit" class="btn btn-gradient-primary me-2">Add </button>
                }
            </form>
        </div>
    </div>
</div>
