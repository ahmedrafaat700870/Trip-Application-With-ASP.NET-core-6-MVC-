@model List<CategoryModel>

@if (Model.Count == 0)
{
    <div class="page-header">
        <h3 class="page-title"> No Category To Show Please Add Category</h3>
        <a asp-controller="Category" asp-action="Add" class="btn btn-gradient-danger btn-fw">Add New Category</a>
    </div>
}
else
{
    <div class="page-header">
        <h3 class="page-title"> Category </h3>
    </div>

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Category Table</h4>

                    <a asp-controller="Category" asp-action="Add" class="btn btn-gradient-danger btn-fw">
                        Add New Category
                    </a>
                    <table id="order-listing" class="table">
                        <thead>
                            <tr>
                                <th>Category Name</th>
                                <th> Update </th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var info in Model)
                            {
                                <tr>
                                    <td>@info.CategoryName</td>
                                    <td>
                                        <a asp-controller="Category" asp-action="Update" asp-route-id="@info.CategoryId"
                                    class="btn btn-gradient-primary btn-fw">
                                            Update
                                        </a>
                                    </td>
                                    <td>
                                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@info.CategoryId"
                                    class="btn btn-gradient-danger btn-fw">
                                            Delete
                                        </a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
