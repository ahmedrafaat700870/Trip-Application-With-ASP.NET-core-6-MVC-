@model List<ToursOptionModel>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            @if (Model.Count > 0)
            {
                <h4 class="card-title">Option Tabel</h4>
                <a asp-controller="Option" asp-action="Add" asp-route-id="@ViewBag.id"
               class="btn btn-gradient-success btn-rounded btn-fw">
                    Add New Option
                </a>
                <table id="order-listing_wrapper" class="table table-striped">
                    <thead>
                        <tr>
                            <th> Strat Date </th>
                            <th> Deadline </th>
                            <th> price </th>
                            <th> option including and not including </th>
                            <th> option needed </th>
                            <th>
                                controller
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.StartDate
                                </td>
                                <td> @item.EndDate </td>
                                <td> $ @item.Price </td>
                                <td style="text-align: center;">  <a asp-route-id="@item.TourOptionId" asp-action="List" asp-controller="Included">show</a>  </td>
                                <td style="text-align: center;"> <a asp-route-id="@item.TourOptionId" asp-action="List" asp-controller="Needed">show</a>  </td>
                                <td>
                                    <a asp-action="Add" asp-controller="Option" asp-route-id="@item.TourId"
                               asp-route-OptionId="@item.TourOptionId"
                               class="btn btn-outline-warning btn-icon-text">
                                        Update
                                    </a>
                                    <a asp-action="Delete" asp-controller="Option" asp-route-id="@item.TourOptionId"
                               asp-route-TourId="@item.TourId" class="btn btn-gradient-danger btn-icon-text">Delete</a>
                                </td>
                            </tr>
                        }
                </table>
            }
            else
            {
                <a asp-controller="Option" asp-action="Add" asp-route-id="@ViewBag.id"
               class="btn btn-gradient-success btn-rounded btn-fw">
                    Add New Option

                </a>
                <div style="text-align : center ; margin-top: 30px ;" class="alert alert-fill-warning" role="alert">
                    <i class="mdi mdi-alert-circle"></i> No Option To Show Please Add Option
                </div>
            }

        </div>
    </div>
</div>
