@model List<OptionNeedModel>
<div class="page-header">
    <h3 class="page-title"> Option Needed  </h3>
</div>
<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Add New Needed</h4>
            <form class="forms-sample"
                  asp-controller="Needed" asp-action="Add"
                  method="post" enctype="multipart/form-data" role="form">
                <input type="hidden" name="OptionId" value="@ViewBag.OptoinId" />
                <div class="form-group">
                    <label for="exampleInputUsername1">Needed Name</label>
                    <input type="text" name="NeededName" class="form-control" id="exampleInputUsername1" placeholder="Needed">
                </div>
                <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
            </form>
        </div>
    </div>
</div>
@if (Model.Count != 0)
{
    <div class="row">
        <div class="col-lg-8 grid-margin stretch-card" style="margin:auto;">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"> Table</h4>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Needed</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (var i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <td>@{
                                            var counter = i + 1;
                                        }
                                        
                                    @counter
                                    </td>
                                    <td>@Model[i].tourNeededName</td>
                                    <td><a class="btn btn-gradient-danger btn-fw" asp-action="Delete" asp-controller="Needed" asp-route-OptionId="@ViewBag.OptoinId" asp-route-id="@Model[i].NeedId">Delete</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

}
else
{
    <div style="text-aligne: center;" class="alert alert-warning" role="alert"> No Data To Show  </div>
}
