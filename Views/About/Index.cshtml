<!-- about section start -->
@model CusAbout
@{
    ViewBag.Title = "About";
}
@if (Model.Info != null)
{
    <section class="about-page section-b-space" style="padding-top: 255px;">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="banner-section">
                        @if (!string.IsNullOrEmpty(Model.Info.PagePhoto))
                        {
                            <img src="~/Uploads/Team/@Model.Info.PagePhoto" class="img-fluid blur-up lazyload" alt="PagePhoto">
                        }
                    </div>
                </div>
                <div class="col-sm-12">
                    <h4>
                        @Model.Info.PageTitel
                    </h4>

                    <p>
                        @Model.Info.Description
                    </p>
                </div>
            </div>
        </div>
    </section>
}
<!-- about section end -->
<!--Testimonial start-->
<section class="testimonial small-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="slide-2 testimonial-slider no-arrow">
                    @*coming from database Team Admin*@
                    @foreach (var item in Model.TeamMembers)
                    {
                        @if (item.isAdmin)
                        {
                            <div>
                                <div class="media">
                                    <div class="text-center">
                                        <img src="~/Uploads/Team/@item.TeamMemberPhoto" alt="TeamMemberPhoto">
                                        <h5>@item.TeamMeberName</h5>
                                        <h6>@item.TeamMebmerJob</h6>
                                    </div>
                                    <div class="media-body">
                                        <p>
                                            @item.TeamMemberJobDescription
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!--Testimonial ends-->
<!--Team start-->
<section id="team" class="team section-b-space ratio_asos">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h2>Unser Team</h2>
                <div class="team-4">

                    @foreach (var item in Model.TeamMembers)
                    {
                        @if (!item.isAdmin)
                        {

                            <div>
                                <div>
                                    <img src="~/Uploads/Team/@item.TeamMemberPhoto" class="img-fluid blur-up lazyload bg-img"
                                alt="TeamMemberPhoto">
                                </div>
                                <h4>@item.TeamMeberName</h4>
                                <h6>@item.TeamMebmerJob</h6>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!--Team ends-->