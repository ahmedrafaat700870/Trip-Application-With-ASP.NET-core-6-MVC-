    <div class="title4">
        <h2 class="title-inner4">Create account</h2>
        <div class="line">
            <span>
            </span>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>create account</h3>
                <div class="theme-card">
                    <form class="theme-form">
                        <div class="form-row">
